{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "lib",
    "incremental": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    ".eslintrc.js"
  ],
  "compileOnSave": false
}
