{
  "roots": [
    "<rootDir>/src/"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": ".spec.ts$",
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "testEnvironment": "node",
  "coverageDirectory": "../coverage",
  "coverageReporters": [
    "text"
  ],
  "collectCoverageFrom": [
    "**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    ".spec.ts"
  ]
}
