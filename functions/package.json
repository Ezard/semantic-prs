{
  "name": "semantic-prs",
  "version": "0.4.0",
  "description": "A GitHub app to check that pull request titles follow the Conventional Commits spec",
  "author": "Ben Ezard <ezard.ben@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Ezard/semantic-prs",
  "keywords": [
    "github",
    "pr",
    "pull-request",
    "conventional-commits"
  ],
  "main": "lib/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "start:probot": "npm run build && probot run ./lib/app.js",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint src",
    "lint:style": "prettier --check src",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:unit:coverage": "jest --coverage",
    "test:mutation": "stryker run",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@conventional-commits/parser": "0.4.1",
    "conventional-commit-types": "3.0.0",
    "firebase-functions": "4.9.0",
    "probot": "12.4.0"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "7.5.1",
    "@stryker-mutator/core": "8.2.6",
    "@stryker-mutator/jest-runner": "8.2.6",
    "@stryker-mutator/typescript-checker": "8.2.6",
    "@types/jest": "29.5.12",
    "@types/node": "18.19.41",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "firebase-functions-test": "3.3.0",
    "firebase-tools": "13.13.3",
    "jest": "29.7.0",
    "nock": "13.5.4",
    "prettier": "3.3.3",
    "smee-client": "2.0.2",
    "ts-jest": "29.2.3",
    "typescript": "5.5.4"
  }
}
