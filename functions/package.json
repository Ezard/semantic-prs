{
  "name": "semantic-prs",
  "version": "0.7.0",
  "description": "A GitHub app to check that pull request titles follow the Conventional Commits spec",
  "author": "Ben Ezard <ezard.ben@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Ezard/semantic-prs",
  "keywords": [
    "github",
    "pr",
    "pull-request",
    "conventional-commits"
  ],
  "main": "lib/index.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "start:probot": "npm run build && probot run ./lib/app.js",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint src/**/*",
    "lint:style": "prettier --check src",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:unit:coverage": "jest --coverage",
    "test:mutation": "stryker run",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@conventional-commits/parser": "0.4.1",
    "conventional-commit-types": "3.0.0",
    "firebase-functions": "6.3.2",
    "probot": "13.4.5"
  },
  "devDependencies": {
    "@eslint/compat": "1.3.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.29.0",
    "@octokit/webhooks-types": "7.6.1",
    "@stryker-mutator/core": "8.7.1",
    "@stryker-mutator/jest-runner": "8.7.1",
    "@stryker-mutator/typescript-checker": "8.7.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.33",
    "@typescript-eslint/eslint-plugin": "8.35.0",
    "@typescript-eslint/parser": "8.35.0",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.32.0",
    "firebase-admin": "13.4.0",
    "firebase-functions-test": "3.4.1",
    "firebase-tools": "14.8.0",
    "globals": "16.2.0",
    "jest": "29.7.0",
    "nock": "14.0.5",
    "prettier": "3.6.0",
    "smee-client": "3.1.1",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3"
  }
}
